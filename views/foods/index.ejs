<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>My Pantry</title>
</head>

<body>
    <%- include('../partials/_navbar') %>
    <h1>Welcome to my Pantry</h1>
    <a href="/users/<%= user._id %>/foods/new">Add New Item</a>
    <% if (foods.length) { %>
    <ul>
        <% foods.forEach(food => { %>
        <li>
            <%= food.name %>
            <a href="/users/<%= user._id %>/foods/<%= food.id %>/edit">Edit</a>
            <form action="/users/<%= user._id %>/foods/<%= food._id %>?_method=DELETE" method="post">
                <button type="submit">Delete</button>
            </form>
        </li>
        <% }); %>
    </ul>
    <% } else { %>
    <p>There are no items in this pantry.</p>
    <% } %>
</body>

</html>